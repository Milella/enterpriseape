<h1>Listing Companies</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Manager</th>
            <th>Status</th>
            <th>Terms</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @companies.each do |company| %>
            <tr>
              <td><%= company.name %></td>
              <td><%= company.manager %></td>
              <td><%= company.status %></td>
              <td><%= company.terms %></td>
              <td><%= link_to 'Show', company, class: 'btn btn-secondary btn-sm' %></td>
              <td><%= link_to 'Edit', edit_company_path(company), class: 'btn btn-sm btn-warning' %></td>
              <td><%= link_to 'Destroy', company, method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<br/>
<%= link_to 'New Company', new_company_path, class: 'btn btn-success' %>
<br>
<br>
<h3>Import Companies</h3>

<%= form_tag import_companies_path, multipart: true do %>
  <%=file_field_tag :file, style: 'margin-right: 50px;' %>
  
  <%=submit_tag "Upload Companies", class: 'btn btn-warning' %>
<% end %>
<br/>
<br/>
<h3>Download File</h3>
<%=link_to "Report", companies_path(format: "csv"), class: 'btn btn-primary' %>



